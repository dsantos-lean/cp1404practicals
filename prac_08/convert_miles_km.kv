BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 30
            multiline: False
            size_hint_x: 0.80
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.20
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
#        font_size: 30
#        on_press: app.handle_calculate(input_number.text)
    Label:
        text: app.message
        font_size: 30
        color: (1, 1, 0, 1)

